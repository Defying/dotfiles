
[bar/top]
enable-ipc = true
wm-restack = i3
module-margin = 1
dpi = 96
width = 100%
height = 30
padding = 2
background = #181818
foreground = #f0f0f0
line-color = #efefef
line-size = 2
separator = /
font-0 = SFMono:size=8;2
font-1 = FontAwesome5Free:style=Solid:size=10;2
font-2 = FontAwesome5Free:style=Regular:size=10;2
font-3 = FontAwesome5Brands:style=Regular:size=10;2
font-4 = SFMono:size=5;-2
font-5 = SFMono:size=7;2
modules-left = clock date pulseaudio
modules-center = i3
modules-right = cpu temperature memory filesystem wired-network

[module/clock]
type = internal/date
interval = 1
date = %I:%M

[module/date]
type = internal/date
interval = 45
date = %m.%d.%y%

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
label-volume = %percentage%%
label-muted = mute

[module/wired-network]
type = internal/network
interface = eth0
interval = 3
accumulate-stats = false
udspeed-minwidth = 4
label-connected = %local_ip%

[module/cpu]
type = internal/cpu
interval = 1
format = <label>
label = %percentage%%

[module/temperature]
interval = 1
type = internal/temperature
thermal-zone = 2
warn-temperature = 80
format = <label>
format-warn = <label-warn>
label = %temperature-c%
label-warn = !! %temperature%
label-warn-foreground = #f00

[module/memory]
type = internal/memory
format = <label>
label = %gb_used%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = %percentage_used%%
label-unmounted = %mountpoint% (?)
label-unmounted-foreground = #66

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-default = 
label-dimmed-underline = ${root.background}
format = <label-state> <label-mode>
label-mode = %mode%
label-mode-padding = 0
label-mode-background = #e60053
label-focused =  %{T5}%index% %{T-}%icon% %{T6}%name%%{T-}
label-focused-background = #101010
label-focused-foreground = #efefef
label-focused-overline = #60ffffff
label-focused-padding = 3
label-unfocused = %{T5}%index% %{T-}%icon%
label-unfocused-foreground = #ffffff
label-unfocused-padding = 2
label-visible = %icon%  %name%
label-visible-overline = #FFFFFF
label-visible-padding = 2
label-urgent = %{T5}%index% %{T-}%icon%
;label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 2
